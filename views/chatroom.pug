extends layout

block content
  .flex.items-center.justify-center.flex-col.mt-40
    p.text-white.text-3xl.mb-6.font-bold.text-center.mb-2 Welcome to MKD Chat Room
    p#error.text-red-500.text-xl.mb-6.text-center.mb-2 
    input#input-message.block.mb-12.p-4.text-lg.text-center.text-gray-900.border.border-gray-300.rounded-lg.bg-gray-50.focus--ring-sky-500.focus--border-sky-500.dark--bg-gray-600.dark--border-gray-500.dark--placeholder-gray-400.dark--text-white.dark--focus--ring-sky-500.dark--focus--border-sky-500(type='text' placeholder='Message', autofocus)
    .flex.gap-6
          button#send-message.inline-flex.items-center.justify-center.mb-6.h-12.px-6.font-bold.tracking-wide.text-white.transition.duration-200.bg-green-600.rounded-lg.hover--bg-green-700.focus--shadow-outline.focus--outline-none.font-bold.
                Send Message
          button#save-chat.inline-flex.items-center.justify-center.mb-6.h-12.px-6.font-bold.tracking-wide.text-white.transition.duration-200.bg-green-600.rounded-lg.hover--bg-green-700.focus--shadow-outline.focus--outline-none.font-bold.
                Save Chat
    ul#chats.flex.flex-col.items-center.justify-center
  
  script(src='https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js')
  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js")
  script(src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js")
  script(src="/js/chatroom.js")
